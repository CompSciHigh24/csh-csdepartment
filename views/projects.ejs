						<a href="/project?courseId=<%= courseId %>&page=<%= i %>" class="px-4 py-2 mx-1 <%= currentPage === i ? 'bg-green-600' : 'bg-green-500' %> text-white rounded hover:bg-green-600"><%= i %></a>
